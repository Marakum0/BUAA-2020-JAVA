<!--pages/order/detail/detail.wxml-->
<view>
  <view class='go-center go-top-10' >
    <view class="card-box">
      <view class="card-fetch">
        <view class="card-left-bar">
          <label>就</label>
          <label>餐</label>
          <label>号</label>
        </view>
      </view>
      <view>
        <view class='go-top-10'>
          <label class='number-card'>{{dining_id}}</label>
          <label class='statu-card'>制作中</label>
        </view>
        <view class='note-card'>
          制作中,尽快为你服务
        </view>
      </view>
    </view>
  </view>
  <!-- 订单详情 -->
  <view class='order-info'>
    <view class='order-info-title'>订单详情</view>
    <view class='cart-list-box' wx:for="{{cartList}}" wx:key="unique">
      <view class='list-info'>
        <view>{{item.name}}</view>
        <view class='list-info-size'>{{item.detail}}</view>
      </view>
      <view style='width:50%;padding:10px;'>
        <view style='float:right'>
          <view style='color:#A3A3A3'>x {{item.count}}</view>
          <view>¥ {{item.price*item.count}}.00</view>
        </view>
      </view>
    </view>

    <view class='order-sum'>
      <label>总计 </label>
      <label class='order-sum-number activity-color'>¥ {{sumMonney-cutMonney}}</label>
    </view>
  </view>
  <view class='order-info'>
    <!-- 本应动态请求，在此写死 -->
    <view class='order-info-title'>订单信息</view>
    <view class='order-info-title flex-display' >订单编号
      <view style='color:black;margin-left:10px'>WD100321342354351356</view>
    </view>
    <view class='order-info-title flex-display' >下单时间
      <view class="order-info-li">2018-10-10 14:51:25</view>
    </view>
  </view>

  <view style='margin-top:15px' class='go-center'>
        <label class='note-exchange'>请您耐心等待</label>
  </view>
</view>