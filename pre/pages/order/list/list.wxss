/* pages/order/list/list.wxss */

.active-color {
  background: #dc143c;
}

.unactive-color {
  background: #999;
}

.start-btn {
  width: 100px;
  height: 30px;
  background: #dc143c;
  font-size: 14px;
  color: white;
}

.note-btn {
  font-size: 14px;
  color: #999;
  margin-top: 30px;
}

.dindgan-i {
  font-size: 100px;
  color: #999;
}

.tab-box {
  width: 50%;
  display: flex;
  font-size: 14px;
  color: white;
}

.full-width {
  width: 100%;
}

.list-cards {
  width: 100%;
  margin-top: 15px;
  margin-bottom: 15px;
}

.list-card {
  width: 90%;
  height: 60px;
  border-radius: 3px;
  margin: 0 auto;
  color: #999;
  font-size: 12px;
}

.list-card-top {
  width: 100%;
  height: 20px;
  line-height: 20px;
  vertical-align: middle;
  border-bottom: 1px solid rgba(153, 153, 153, 0.199);
}

.list-card-left{
  float: left;
  height: 30px;
  line-height: 30px;
  vertical-align: middle;
  padding: 5px;
  font-size: 16px;
  color: #dc143c
}

.list-card-right{
  float:right;
  width: 41px;
  height: 20px;
  line-height: 20px;
  vertical-align: middle;
  border-radius: 3px;
  color: #ffffff;
  padding-left:5px;
  margin: 10px
}